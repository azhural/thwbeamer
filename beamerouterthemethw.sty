\RequirePackage{tikz}

\defbeamertemplate*{frametitle}{texsx}[1][]
{
  \vskip1cm
  \begin{beamercolorbox}[wd=\paperwidth,ht=1.2cm]{frametitle} 
    \begin{tikzpicture}
      \useasboundingbox[](0,0) rectangle(\the\paperwidth,1.2);
      \ifx\insertframesubtitle\@empty%
      {\node[anchor=base west,font=\large] at (0.65,0.58){\insertframetitle};}
      \else%
      {\node[anchor=base west,font=\large] at (0.65,0.58){\insertframetitle};%
      \node[anchor=base west,font=\small] at (0.65,0.2){\insertframesubtitle};}%
      \fi
    \end{tikzpicture}
  \end{beamercolorbox}
}

